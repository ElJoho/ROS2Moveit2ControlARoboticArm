    </link>
    <link name="shoulder_link">
        <visual>
            <origin xyz="0 0 0.25" rpy="0 0 0" />
            <geometry>
                <cylinder length="0.5" radius="0.1" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <origin xyz="0 0 0.25" rpy="0 0 0" />
            <geometry>
                <cylinder length="0.5" radius="0.1" />
